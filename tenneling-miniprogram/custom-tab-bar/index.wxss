/* component/tabBar/tabbar.wxss */

.tabbar-flex {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 99rpx;
    background: #fff;
    padding: 0 80rpx;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9;
}


.tabbar-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 54rpx;
    height: 99rpx;
}

.icon-img {
    width: 48rpx;
    height: 48rpx;
}

.tabbar-title {
    font-size: 20rpx;
    margin-top: 10rpx;
}

.scan-img {
    width: 80rpx;
    height: 80rpx;
}

.wrapper {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    height: 90%;
  }
  
  .block {
    margin:10px;
    width: 100px;
    height: 100px;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

.block>van-icon{
    margin: 10px 0;
}